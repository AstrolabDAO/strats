{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es6", "es2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/": ["./src/"]
    },
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ]
}
